{
  "compilerOptions": {
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": false,
    "declarationMap": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "target": "es2019",
    "outDir": "./dist",
    "rootDir": "./src",
    "skipLibCheck": true
  },
  "include": ["src", "node_modules/ora"],
  "exclude": ["src/templates"]
}
